<h1>Log in Please</h1>

<%= form_tag sessions_path do %>
  <div class="login_form">
    <%= label_tag :email %><br>
    <%= text_field_tag :email, params[:email] %>
  </div>
  <div class="login_form">
    <%= label_tag :password %><br>
    <%= password_field_tag :password %>
  </div>
  <div class="login_form">
    <%= submit_tag 'log in' %>
  </div>
<% end %>
